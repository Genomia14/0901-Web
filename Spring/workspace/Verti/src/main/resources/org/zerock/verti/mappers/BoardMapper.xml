<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.verti.mappers.BoardMapper">

    <select id="selectList" parameterType="string" resultType="org.zerock.verti.vo.BoardVO">
        SELECT * FROM verti_board
        <where>
            <if test="searchWord != null and searchWord != ''">
                title LIKE CONCAT('%', #{searchWord}, '%')
            </if>
        </where>
        ORDER BY num DESC
    </select>

    <select id="selectOne" parameterType="int" resultType="org.zerock.verti.vo.BoardVO">
        SELECT * FROM verti_board WHERE num = #{num}
    </select>

    <insert id="insert" parameterType="org.zerock.verti.vo.BoardVO">
        INSERT INTO verti_board(title, content, id, postdate, visitcount)
        VALUES(#{title}, #{content}, #{id}, NOW(), 0)
    </insert>

    <update id="update" parameterType="org.zerock.verti.vo.BoardVO">
        UPDATE verti_board SET title=#{title}, content=#{content} WHERE num=#{num}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM verti_board WHERE num=#{num}
    </delete>

    <update id="incrementVisitCount" parameterType="int">
        UPDATE verti_board SET visitcount = visitcount + 1 WHERE num = #{num}
    </update>

</mapper>
